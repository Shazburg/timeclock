<% @employees.each do |emp| %>
  <h3><%= emp.name_with_comma %></h3>
  <table>
    <tr>
      <th>
        Punch
      </th>
      <th>&nbsp;</th>
      <th>
        Time
      </th>
    </tr>
  <% emp.punches.each do |ep| %>
    <tr>
      <td align="center">
        <%= "In" if ep.shift_in %>
        <%= "+" if ep.break_out %>
        <%= "-" if ep.break_in %>
        <%= "Out" if ep.shift_out %>
      </td>
      <td>&nbsp;</td>
      <td><%= ep.created_at.localtime %></td>
    </tr>
  <% end %>
</table>
<% end %>

<br />

<%= link_to 'New Punch', new_punch_path %>
