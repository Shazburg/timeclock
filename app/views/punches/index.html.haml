- title "Punches"

%table
  %tr
    %th Employee
    %th Category
    %th Punch
  - for punch in @punches
    %tr
      %td= punch.employee.display_name
      %td= punch.category.name
      %td= punch.in ? "In" : "Out"
      %td= link_to 'Show', punch
      %td= link_to 'Edit', edit_punch_path(punch)
      %td= link_to 'Destroy', punch, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Punch", new_punch_path
